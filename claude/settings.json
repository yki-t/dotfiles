{
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "permissions": {
    "allow": [
      "Bash(test:*)",
      "Bash(cat:*)",
      "Bash(wc:*)",
      "Bash(chmod:*)",
      "Bash(head:*)",
      "Bash(less:*)",
      "Bash(tail:*)",
      "Bash(mkdir:*)",
      "Bash(diff:*)",
      "Bash(xargs:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(fdfind:*)",
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(docker compose exec:*)",
      "Bash(mv:*)",
      "Bash(gh issue view:*)",
      "Bash(rm:*)",
      "Bash(gh issue create:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(pnpm test:*)",
      "Bash(docker restart:*)",
      "Bash(aws:*)",
      "Bash(git checkout:*)",
      "Bash(git add:*)",
      "Bash(gh issue list:*)",
      "WebFetch(domain:cloud.google.com)"
    ],
    "deny": [
      "Bash(rustc:*)",
      "Bash(trunk:*)",
      "Bash(cargo:*)",
      "Bash(git push:*)",
      "Bash(git reset:*)",
      "Bash(git checkout:*)",
      "Bash(git stash:*)",
      "Bash(git restore:*)",
      "Bash(gh pr close:*)",
      "Bash(terraform apply:*)",
      "Bash(npx:*)",
      "Bash(npm run cdk deploy:*)",
      "Bsah(npm run -- cdk deploy:*)",
      "Bash(npm run cdk destroy:*)",
      "Bash(npm run -- cdk destroy:*)"
    ],
    "defaultMode": "dontAsk"
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/claude/hook pre"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/claude/hook post"
          }
        ]
      }
    ]
  },
  "language": "敬体",
  "promptSuggestionEnabled": false
}
