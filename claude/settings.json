{
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "permissions": {
    "deny": [
      "Bash(rustc *)",
      "Bash(trunk *)",
      "Bash(cargo *)",
      "Bash(git *push *)",
      "Bash(git *reset *)",
      "Bash(git *checkout *)",
      "Bash(git *stash *)",
      "Bash(git *restore *)",
      "Bash(gh pr close *)",
      "Bash(terraform apply *)",
      "Bash(npx *)",
      "Bash(npm run cdk deploy *)",
      "Bash(npm run -- cdk deploy *)",
      "Bash(npm run cdk destroy *)",
      "Bash(npm run -- cdk destroy *)"
    ],
    "defaultMode": "dontAsk"
  },
  "model": "opus",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/claude/hook pre"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/claude/hook post"
          }
        ]
      }
    ]
  },
  "language": "敬体",
  "promptSuggestionEnabled": false,
  "skipDangerousModePermissionPrompt": true
}
