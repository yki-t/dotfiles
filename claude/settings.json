{
  "env": {
    "MAX_THINKING_TOKENS": "31999"
  },
  "permissions": {
    "allow": [
      "Bash(cargo check:*)",
      "Bash(cargo build:*)",
      "Bash(test:*)",
      "Bash(cat:*)",
      "Bash(wc:*)",
      "Bash(chmod:*)",
      "Bash(head:*)",
      "Bash(less:*)",
      "Bash(tail:*)",
      "Bash(mkdir:*)",
      "Bash(diff:*)",
      "Bash(xargs:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(fdfind:*)",
      "Bash(grep:*)",
      "Bash(rg:*)"
    ],
    "deny": [
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(gh pr close:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/claude/hook pre"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "~/dotfiles/claude/hook post"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}